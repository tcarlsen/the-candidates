h1.app-header {{header}}
ul.helper
  li
    | Sandsynligvis valgt iflg. Berlingske #[strong ({{stats.probably}})]
    div.status.maybe
      i.fa.fa-circle
      i.fa.fa-circle
      i.fa.fa-circle
  li
    | Valgt iflg. Berlingske #[strong ({{stats.predicted}})]
    div.status.pretty-sure
      i.fa.fa-circle
      i.fa.fa-circle
      i.fa.fa-circle
  li
    | Officielt valgt #[strong ({{stats.official}})]
    div.status.definitely
      i.fa.fa-circle
      i.fa.fa-circle
      i.fa.fa-circle
  li.mandater 
    | Antal mandater fordelt 
    strong ({{stats.mandates}}/179)
    div.status
p.description {{description}}
small.updated Senest opdateret: {{updated | date:'medium'}}
div.view
  div.party.toggler(ng-hide="location=='ritzau'")
    span.toggler-label Visning
    .switch
      input#parti.switch-input(type='radio', name='view', value='parti', ng-checked="location=='parti'")
      label.switch-label.switch-label-off(for='parti' ng-click="changeView('partier')" ng-class="{'active': location=='partier'}") Parti
      input#kandidat.switch-input(type='radio', name='view', value='kandidat' ng-checked="location=='kandidater'")
      label.switch-label.switch-label-on(for='kandidat' ng-click="changeView('kandidater')" ng-class="{'active': location=='kandidater'}") Kandidat
      span.switch-selection
  div.overview
    a.overview-button(ng-href="#/ritzau" ng-hide="location=='ritzau'") Stemmer for valgte og ikke valgte
    a.overview-button(ng-href="#/" ng-show="location=='ritzau'") Hvem er valgt?
    a.overview-button(href="http://www.politiko.dk/statistik") De valgte statistisk set
  .clearfix
div.view-container(ng-view autoscroll="true")
